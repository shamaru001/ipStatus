version: "3.9"

services:
  flask_app:
    container_name: "web"
    build: .
    ports:
      - "5000:5000"
    volumes:
      - .:/code
    links:
      - flask_db
  flask_db:
    container_name: "database"
    image: postgresql:15.6
    environment:
      POSTGRES_PASSWORD: user
      POSTGRES_USER: password
      POSTGRES_DB: mydb
    ports:
      - "3306:3306"